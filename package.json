{
    "name": "allc",
    "version": "0.3.3",
    "description": "A small typescript package for color conversion.",
    "repository": "https://github.com/Trombecher/allc",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "scripts": {
        "test": "vitest --no-watch",
        "build": "tsc",
        "gen": "bun src-comptime/precalculate.ts"
    },
    "keywords": [
        "Color",
        "Colors",
        "Color Space",
        "Color Model",
        "Conversion",
        "RGB",
        "RGBA",
        "HSL",
        "HSLA",
        "HSV",
        "HSVA",
        "HSI",
        "Linear RGB",
        "CIE 1931 XYZ",
        "CIE 1931 xyY",
        "Oklab",
        "Oklch",
        "CIELAB",
        "CIELCH"
    ],
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "default": "./dist/index.js"
        },
        "./conversions": {
            "types": "./dist/conversions/index.d.ts",
            "default": "./dist/conversions/index.js"
        },
        "./distances": {
            "types": "./dist/distances.d.ts",
            "default": "./dist/distances.js"
        },
        "./primaries": {
            "types": "./dist/primaries.d.ts",
            "default": "./dist/primaries.js"
        },
        "./illuminants": {
            "types": "./dist/illuminants.d.ts",
            "default": "./dist/illuminants.js"
        },
        "./matrices": {
            "types": "./dist/matrices/index.d.ts",
            "default": "./dist/matrices/index.js"
        }
    },
    "type": "module",
    "author": "Tobias Hillemanns",
    "license": "MIT",
    "devDependencies": {
        "@types/culori": "^4.0.1",
        "culori": "^4.0.2",
        "ml-matrix": "^6.12.1",
        "typescript": "^5.9.3",
        "vitest": "^3.2.4"
    },
    "files": [
        "src",
        "dist",
        "hero.svg",
        "README.md",
        "LICENSE"
    ]
}